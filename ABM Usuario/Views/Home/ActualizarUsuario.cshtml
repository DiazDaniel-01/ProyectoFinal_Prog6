@model ABM_Usuario.Models.UsuarioModel

<h2>Actualizar Usuario</h2>

<form method="post">
    <div>
        <label for="IdUsuario">IdUsuario:</label>
        <input type="text" id="IdUsuario" name="IdUsuario" value="@Model.IdUsuario" readonly />
    </div>

    <div>
        <label for="Nombre">Nombre:</label>
        <input type="text" id="Nombre" name="Nombre" value="@Model.Nombre" />
    </div>

    <div>
        <label for="Apellido">Apellido:</label>
        <input type="text" id="Apellido" name="Apellido" value="@Model.Apellido" />
    </div>

    <div>
        <label for="Correo">Correo:</label>
        <input type="email" id="Correo" name="Correo" value="@Model.Correo" />
    </div>

    <div>
        <label for="Contraseña">Contraseña:</label>
        <input type="password" id="Contraseña" name="Contraseña" value="@Model.Contraseña" />
    </div>

    <div>
        <label for="Activo">Activo:</label>
        <input type="checkbox" id="Activo" name="Activo" @(Model.Activo ? "checked" : "") />
    </div>

    <div>
        <button type="submit">Actualizar</button>
    </div>
</form>